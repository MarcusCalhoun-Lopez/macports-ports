# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4

PortSystem                              1.0
PortGroup           gcc_build           1.0

name                gcc48
version             4.8.5
subport ${name}     { revision 6 }
epoch               2

platforms           {darwin < 17}

checksums           rmd160  98e84aa59bd668c4ab58afea9c7a2d1cc0c6ef7e \
                    sha256  22fb1e7e0f68a63cee631d85b20461d1ea6bda162f03096350e38c8d427ecf23 \
                    size    86165587

# handle OS X deployment targets correctly
#     see https://gcc.gnu.org/bugzilla/show_bug.cgi?id=63810
patchfiles-append   macosx-version-min.patch

# don't link with "-flat_namespace -undefined suppress" on Yosemite and later
#     see https://trac.macports.org/ticket/45483
patchfiles-append   yosemite-libtool.patch

# see https://trac.macports.org/ticket/52393
patchfiles-append   patch-gcc-texi.diff

# see https://trac.macports.org/ticket/53662
patchfiles-append   patch-libisl.diff
post-extract {
    xinstall -d -m 0755 ${build.dir}/gcc
    ln -s ${prefix}/libexec/isl14/include/isl ${build.dir}/gcc
}

post-destroot {
    move    ${destroot}${prefix}/lib/${name}/pkgconfig/libgcj-${gcc.suffix}.pc \
            ${destroot}${prefix}/lib/pkgconfig/
}

# TODO: check if `known_fail` is needed for `[vercmp ${xcodeversion} >=  9]`
# see https://github.com/macports/macports-ports/commit/449b6b5b24b65a8caa2521dbd7ca83a43780e0a9
# see https://github.com/macports/macports-ports/commit/9986b5f971d504de2e6c479a7f96cd6276cfb38e
# see https://trac.macports.org/ticket/29067
# see https://trac.macports.org/ticket/29104
compiler.blacklist-append   {clang >= 900} gcc-4.0 {llvm-gcc-4.2 < 2336.1}

if { ${configure.build_arch} ne "i386" } {
    # TODO: most other GCC ports apply this to all architectures
    # TODO: does this work with universal?
    gcc.macports_exports-delete DISABLE_MACPORTS_AS_CLANG_SEARCH=1 \
                                DISABLE_XCODE_AS_CLANG_SEARCH=1
}
